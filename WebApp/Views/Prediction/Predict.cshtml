@model WebAppML.Model.ModelInput;
@{
    ViewData["Title"] = "Predict";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h2>A Simple Predictor AI For the Dow Jones</h2>
    <p>See Today's Predicted High By Only Entering The Opening Price And Volume.</p>
    <p>It is made with Ols Regression With a RSquared of 0.9997</p>
</div>

<hr/>

<div class="text-center">
    <div class="row">
        <form asp-action="Predict">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group col-md-4">
                <label asp-for="Open"></label>
                <input asp-for="Open"/>
                <span asp-validation-for="Open"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Volume"></label>
                <input asp-for="Volume"/>
                <span asp-validation-for="Volume"></span>
            </div>
            <div class="form-group">
                <input type ="submit" value="Predict" class="btn btn-primary"/>
            </div>
        </form>  
        </div>
    </div>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}

<hr/>

@if(ViewBag.Result != null)
{
    <div class="text-center">
        <div class="row">
            <div class=" col-md-6">
                <h4>Your Prediction As Of @DateTime.Now is $@ViewBag.Result.Score</h4>
            </div>
        </div>
    </div>
}

